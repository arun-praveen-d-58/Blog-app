<div class="card p-2">
<p style="color: dodgerblue">
  <img src="data:image/png;base64," class="rounded-circle shadow-4 m-1"
       style="width: 40px;" alt="Avatar" />
  <%= "@#{comment.user.email}" %></p>
<div style="margin: 20px">
<%= comment.context%>
</div>
<div style="margin: 5px;display: flex;flex-direction: row"><%= render partial: 'user_comment_ratings/rating_form', locals: {comment: comment ,user_rating: (@user_comment_ratings != nil ? @user_comment_ratings[comment.id]: 0) } %>
<div style="margin-left: 4px">
  <%= button_to "View all", !@topic.nil? ?  topic_post_comment_user_comment_ratings_path(@topic,@post,comment.id.to_i) : post_comment_user_comment_ratings_path(@post,comment.id.to_i),method: :get,class: "btn btn-secondary "%>
</div>
</div>
<div style="display:flex; flex-direction: row;">
  <%if current_user == comment.user %>
 <div style="margin: 5px"><%= link_to 'Edit',  @topic.nil? ?edit_post_comment_path(@post, comment.id.to_i):edit_topic_post_comment_path(@topic,@post, comment.id.to_i) ,class: "btn btn-primary"%></div>
  <div style="margin: 5px"><%= link_to 'Delete', post_comment_path(@post, comment.id.to_i),data:{turbo_method: :delete,confirm:"Are you sure to delete?"}, class: "btn btn-danger"%></div>
  <%end%>
    </div>
</div>
